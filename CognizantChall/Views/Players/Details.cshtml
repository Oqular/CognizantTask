@model CognizantChall.Models.Players

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Players</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.nickname)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.nickname)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.successfulTaskCount)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.successfulTaskCount)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.tasks)
		</dt>
		<dd class="col-sm-10">
		</dd>
		@foreach (var t in Model.tasks)
		{
			<dt class="col-sm-2">
				
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(modelItem => t.task.name)
			</dd>
		}
	</dl>
</div>
